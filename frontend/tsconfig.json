{
  "compilerOptions": {
    "target": "ES6", 
    "lib": ["dom", "ES2018"],                                 
    "module": "esnext",
    "rootDir": "src",
    "outDir": "dist",                             
    "esModuleInterop": true, 
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,                          
    "strict": true,  
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "typeRoots": ["node_modules/@types"],
    "jsx": "react-jsx"                                                    
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}